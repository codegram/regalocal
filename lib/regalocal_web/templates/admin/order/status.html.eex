<%
   classes = "px-2 inline-flex text-xs leading-5 font-semibold rounded-full " <> case @order.status do
  :pending_payment -> "bg-yellow-100 text-yellow-800"
  :paid -> "bg-green-100 text-green-800"
  :payment_confirmed -> "bg-green-100 text-green-800"
  :redeemed -> "bg-secondary-100 text-secondary-800"
  end
%>
<span class="<%= classes %>">
  <%= @formatted_status %>
</span>
