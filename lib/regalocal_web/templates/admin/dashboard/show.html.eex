              <a href="<%= Routes.admin_coupon_path(@conn, :new) %>" class="flex items-center justify-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-indigo-600 bg-white hover:text-indigo-500 focus:outline-none focus:shadow-outline transition ease-in-out duration-150">
                Crear cupó
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
