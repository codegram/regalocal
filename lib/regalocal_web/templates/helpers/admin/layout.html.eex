<%= if @title do %>
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
      <h1 class="text-lg leading-6 font-semibold text-gray-900">
        <%= @title %>
      </h1>
    </div>
  </header>
<% end%>
<main>
  <div class="max-w-7xl mx-auto py-6 px-2 sm:px-6 lg:px-8">
    <%= @content %>
  </div>
</main>